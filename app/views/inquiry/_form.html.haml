= form_for @inquiry, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field'
  .control-group
    = f.label :x, :class => 'control-label'
    .controls
      = f.number_field :x, :class => 'number_field'
  .control-group
    = f.label :y, :class => 'control-label'
    .controls
      = f.number_field :y, :class => 'number_field'
  .control-group
    = f.label :classification, :class => 'control-label'
    .controls
      = f.text_field :classification, :class => 'text_field'
  .control-group
    = f.label :lon, :class => 'control-label'
    .controls
      = f.text_field :lon, :class => 'text_field'
  .control-group
    = f.label :lat, :class => 'control-label'
    .controls
      = f.text_field :lat, :class => 'text_field'
  .control-group
    = f.label :land_id, :class => 'control-label'
    .controls
      = f.number_field :land_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), inquiry_path, :class => 'btn'
