- model_class = Inquiry
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @inquiry.email
%p
  %strong= model_class.human_attribute_name(:x) + ':'
  %br
  = @inquiry.x
%p
  %strong= model_class.human_attribute_name(:y) + ':'
  %br
  = @inquiry.y
%p
  %strong= model_class.human_attribute_name(:classification) + ':'
  %br
  = @inquiry.classification
%p
  %strong= model_class.human_attribute_name(:lon) + ':'
  %br
  = @inquiry.lon
%p
  %strong= model_class.human_attribute_name(:lat) + ':'
  %br
  = @inquiry.lat
%p
  %strong= model_class.human_attribute_name(:land_id) + ':'
  %br
  = @inquiry.land_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), inquiry_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_inquiry_path(@inquiry), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), inquiry_path(@inquiry), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
